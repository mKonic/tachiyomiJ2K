<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/material_component_lists_single_line_with_avatar_height"
    style="@style/Widget.Tachiyomi.CardView.Draggable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_component_lists_single_line_with_avatar_height">

        <ImageView
            android:id="@+id/reorder"
            android:layout_width="54dp"
            android:layout_height="@dimen/material_component_lists_single_line_with_avatar_height"
            android:scaleType="center"
            app:tint="?attr/colorOnBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_drag_handle_24dp" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            app:tint="@color/gray_button"
            android:src="@drawable/ic_label_outline_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="6dp"
            app:layout_constraintStart_toEndOf="@id/reorder"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_edit_24dp"
            app:tint="@color/gray_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <eu.mkonic.tachiyomi.widget.TachiyomiTextInputEditText
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:hint="@string/category"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            tools:text="Title"
            android:autofillHints="" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:layout_marginStart="3dp"
            android:maxLines="1"
            android:textColor="?attr/colorOnBackground"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/edit_button"
            app:layout_constraintStart_toEndOf="@id/image"
            tools:text="Title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>